<h2><%= @list.name %></h2>
<%= link_to "back to the list", lists_path, class: "btn btn-success"%><br><br>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%><br>

<p><strong></strong></p>
<ul class="list-group">
  <div class="row">
    <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
      <div class="col-12 col-sm-6 col-lg-3 p-3">
        <div class="card"  style="width: 18rem;">
          <%= image_tag movie.poster_url, alt: "cinema", width: 200, class: "card-img" %>
          <div class="card-body">
            <h5 class="card-title"><strong><%= movie.title %></strong></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text">Rating: <%= movie.rating %></p>
            <%= button_to "delete", list_bookmark_path(@list, bookmark), method: :delete, class: "btn btn-warning"%>
          </div>
        </div>
      </div>
  <% end %>
